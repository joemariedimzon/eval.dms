<dl class="portlet searchrequestportlet" tal:condition="python: view.roles()">
<dt class="portletHeader" tal:content="python:  view.contents().portlet_title"></dt>


<dd class="portletItem">
    <form id="portlet" tal:attributes= "action string:${context/absolute_url}/mydocs_view" method='post' 
                      tal:define="status view/status;
                                  title python: view.searched_value('title');
                                  status_search python: view.searched_value('status');">
    <div class="field">
      <label>Title
        <input name='title' id='title' tal:attributes="value title"/>
      </label>
    </div>

    <div class="field">
      <label tal:condition="status">Status
          <select name='status' id='status'>
        <tal:entry tal:repeat="option status" tal:define='val status_search'>
           <option tal:attributes="selected python: (val == str(option['status']).title())" tal:content="python: option['status'].title()"></option>
        </tal:entry>
      </select>
      </label>
    </div>
    <input id="pagination" name="pagination" value="0" type="hidden">
    <input type="submit" value="Submit">

    </form>
  <span  style="display: none" id="current" tal:content="context/absolute_url"></span>
  
  
  </dd>
</dl>